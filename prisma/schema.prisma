generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  tenant_id Int
  role_id   Int
  email     String   @unique
  password_hash      String
  full_name String
  last_login DateTime?
  // Puedes agregar relaciones aquí
  tenant    Tenant  @relation(fields: [tenant_id], references: [id])
  role      Role    @relation(fields: [role_id], references: [id])
  
  inventory_transactions Inventory_Transaction[]
  @@map("users")
}

model Tenant{
  id        Int      @id @default(autoincrement())
  name      String   @unique
  plan_type String
  is_active Boolean  @default(true)
  createdAt DateTime @default(now())
  products Product[]

  users    User[]
  inventory_transactions Inventory_Transaction[]
  @@map("tenants")
}

model Role{
  id        Int      @id @default(autoincrement())
  name      String   @unique
  description String?
  users     User[]
  @@map("roles")
}

model Product {
  id        Int      @id @default(autoincrement())
  tenant_id Int
  sku       String
  name      String
  description String?
  price_cost Float
  price_sale Float
  min_stock  Int
  // Puedes agregar relaciones aquí
  tenant    Tenant  @relation(fields: [tenant_id], references: [id])
  @@unique([tenant_id, sku]) // El SKU puede repetirse en diferentes tenants, pero no en el mismo.
  inventory_transactions Inventory_Transaction[]
  @@map("products")
}

model Inventory_Transaction{
  id            Int      @id @default(autoincrement())
  tenant_id     Int
  product_id    Int
  user_id       Int
  type          String
  quantity      Int
  reason        String?
  created_at   DateTime @default(now())
  // Puedes agregar relaciones aquí
  tenant        Tenant  @relation(fields: [tenant_id], references: [id])
  product       Product @relation(fields: [product_id], references: [id])
  user          User    @relation(fields: [user_id], references: [id])
  @@map("inventory_transactions")
}